
function addProduct(name, cat, scale, vendor, desc, stock, price) {
    var noofrecords = db.products.find().count();
    var maxid = noofrecords + 1;

    var document = {
        productName: name,
        productLine: cat,
        productScale: scale,
        productVendor: vendor,
        productDescription: desc,
        quantityInStock: stock,
        buyPrice: price,
        MSRP: "214.3",
        Image: "data/2.jpg",
        productID: maxid
    };

    db.products.insertOne(document);
    print("Your record has been inserted with id = " + maxid)
}

