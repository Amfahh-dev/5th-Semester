var updateProduct = function(name, cat, scale, vendor, desc, stock, price, id) {
    var noofrecord = db.products.find({ productID: id }).count();

    if (noofrecord > 0) {
        var document = {
            productName: name,
            productLine: cat,
            productScale: scale,
            productVendor: vendor,
            productDescription: desc,
            quantityInStock: stock,
            buyPrice: price,
            MSRP: "214.3",
            image: "data/2.jpg"
        };

        db.products.updateOne(
            { productID: id },
            { $set: document },
            { upsert: true, multi: true }
        );

        print("Your record has been updated");
    }
};

