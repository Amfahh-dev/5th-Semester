deleteProduct=function(id)
{  

  var noofrecord=db.products.find({productID:id}).count()

  if (noofrecord>0)
  {
    db.products.deleteOne({productID:id})

    print("Your record has been deleted")
  }
  else
  {
    print("Record not found")
  }

}

deleteProduct(241)
